<div class="container mt-5">
  <div class="d-flex flex-row align-items-center">
    <h1>My Lists</h1>
    <p><%= link_to "Add a new list", new_list_path, class: "btn btn-sm btn-primary ms-3"%></p>
  </div>
  <% @lists.each do |list| %>
    <div class="card p-3"><%= link_to list.name, list_path(list) %></div>
  <% end %>
</div>
