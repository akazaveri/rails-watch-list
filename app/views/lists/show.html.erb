<div class="container mt-5">
  <div class="d-flex flex-row align-items-center">
    <h1><%= @list.name %></h1>
    <p><%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-sm btn-primary ms-3"%></p>
  </div>
  <div class="mt-3">
    <% @bookmarks.each do |bookmark| %>
      <div class="card p-3">
        <h3 class="m-0"><%= bookmark.movie.title %></h3><br>
        <p class="m-0"><%= bookmark.comment%></p>
        <%= link_to "Remove", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-light me-2 border border-secondary mb-5" %>
      </div>
    <% end %>

  </div>
</div>
